<p>選手情報</p>
<%=@player.name%>
<%=@player.info%>
<%=@player.team%>

<%@comments.each do |comment|%>
    <%=comment.user%>
    <%=comment.review%>
    <%=comment.content%>
<%end%>

<%=form_tag("/player/#{@player.id}/create") do %>
    <p>レビュー</p>
    <select name="review">
        <option>1</option>
        <option>2</option>
        <option>3</option>
    </select>
    <textarea name="content"></textarea>
    <input type="submit" value="投稿">
<%end%>